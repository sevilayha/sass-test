{
  "name": "sass-test",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run build-css && concurrently \"npm run watch-css\" \"npm run lite\"",
    "build-css": "node-sass sass/main.scss css/styles.css --include-path sass --output-style compressed",
    "watch-css": "node-sass sass/main.scss css/styles.css --include-path sass --output-style compressed --watch",
    "lite": "lite-server"
  },
  "devDependencies": { 
    "concurrently": "^3.4.0",
    "lite-server": "^2.3.0",
    "node-sass": "^4.5.1"
  }
}
